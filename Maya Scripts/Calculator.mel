global proc float Mode(float $nums[])
{
    $nums = `sort $nums`;
    float $value = 0;
    float $last = 0;
    int $freq = 0;
    int $maxFreq = 0;
    for($i in $nums)
    {
        if($i == $last)
        {
           $freq++;            
        }
        else
        { 
            if($freq > $maxFreq)
            {
                $maxFreq = $freq;
                $value = $last;
            }
            $freq = 1;
            $last = $i;
        }
    }
    if($freq > $maxFreq)
    {
        $maxFreq = $freq;
        $value = $last;
    }
    return $value;
}

