global proc float Median(float $nums[])
{
    $nums = `sort $nums`;
    if (size($nums) % 2 == 0)
    {
        return (($nums[size($nums)/2] + $nums[size($nums)/2-1])/2);
    }
    else
    {
        return $nums[(size($nums)/2)];
    }
}

